<!--バリデーション-->
<% if @post_new.errors.any? %>
 <h3><%= @post_new.errors.count %>件のエラーが発生しました。</h3>
  <ul>
    <% @post_new.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--投稿を行います。-->
<h1>投稿</h1>
<%= form_with model: @post_new, url: public_posts_path, method: :post do |f| %>
  <h4>題名</h4>
  <%= f.text_field :title %>
  <h4>読み方</h4>
  <%= f.text_field :read %>
  <h4>意味</h4>
  <%= f.text_area :meaning %>
  <div>
    <%= f.submit '作成' %>
  </div>
<% end %>